@model WebAppEjecucion.Models.Avance

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar</h2>

<h3>¿Seguro  que desea eliminar los datos de este Avance?</h3>
<div>
    <h4>Avance</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Expediente Matriz
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Obra.expMatriz)
        </dd>

        <dt>
            Porcentaje Previsto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.porcentajePrevisto)
        </dd>

        <dt>
            Porcentaje Real
        </dt>

        <dd>
            @Html.DisplayFor(model => model.porcentajeReal)
        </dd>

        <dt>
            Porcentaje Atraso
        </dt>

        <dd>
            @Html.DisplayFor(model => model.porcentajeAtraso)
        </dd>

        <dt>
            Fecha de Avance
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaAvance)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Atras", "Index", "Avances", new { id = Model.IdObra }, new { @class = "btn btn-danger" })
        </div>
    }
</div>
