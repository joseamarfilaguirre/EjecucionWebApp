@model Double?
@if (!Model.HasValue)
{
    <input type="number"
           id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")"
           name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")" 
           min="0"
           step="0.0001"
           class="form-control"
           />
}
else
{
    <input type="number" 
           value="@Model.Value.ToString().Replace(",",".")"
           id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")"
           name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")" 
           min="0"
           step="0.0001"
           class="form-control"
           />
}