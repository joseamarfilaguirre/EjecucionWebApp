@model IEnumerable<WebAppEjecucion.Models.Seguimiento>

@{
    ViewBag.Title = "Index";
}

<h2>Seguimiento</h2>

<p>
    @Html.ActionLink("Agregar Seguimiento", "Create", new { id = ViewBag.idobra }, new { @class = "btn btn-success" })
</p>
@if (Model.Count() != 0)
{
    <table class="table">
        <tr>
            <th>
                Obra
            </th>
            <th>
                Fecha Seguimiento
            </th>
            <th>
                Estado Obra
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Obra.Obra1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaSeguimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoObra.EstadoObra1)
                </td>
                <td>
                    @Html.ActionLink("Ver detalles", "Details", new { id = item.IdSeguimiento }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdSeguimiento }, new { @class = "btn btn-warning" }) |                   
                    @Html.ActionLink("Borrar", "Delete", new { id = item.IdSeguimiento }, new { @class = "btn btn-danger" }) |
                </td>
            </tr>
        }

    </table>

}
else
{
    <p>La Obra no tiene Seguimientos cargados</p>
}
<p>
    @Html.ActionLink("Atras", "Details", "Obras", new { id = ViewBag.idobra }, new { @class = "btn btn-danger" })
</p>

