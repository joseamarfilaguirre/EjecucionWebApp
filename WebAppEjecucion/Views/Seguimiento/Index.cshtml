@model IEnumerable<WebAppEjecucion.Models.Clases.RelacionSeguimientoPersona>

@{
    ViewBag.Title = "Index";
}

<h2>Seguimeinto</h2>

<p>
    @Html.ActionLink("Agregar Seguimiento", "Create", new { id = ViewBag.idobra }, new { @class = "btn btn-success" })
</p>
@if (Model.Count() != 0)
{
    <table class="table">
        <tr>
            <th>
                Obra
            </th>
            <th>
                Fecha de Seguimiento
            </th>
            <th>
                Estado de Obra
            </th>
            <th>
                Inspector
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Obra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaSeguimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoObra)
                </td>
                <td> 
                    @Html.DisplayFor(modelItem => item.Inspector)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdSeguimiento }) |
                    @Html.ActionLink("Ver detalles", "Details", new { id = item.IdSeguimiento }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdSeguimiento }) |
                </td>
            </tr>
        }

    </table>

}
else
{
    <p>La Obra no tiene Seguimientos cargados</p>
}
<p>
    @Html.ActionLink("Atras", "Details", "Obras", new { id = ViewBag.idobra }, new { @class = "btn btn-danger" })
</p>

