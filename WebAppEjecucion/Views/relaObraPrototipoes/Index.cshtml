@model IEnumerable<WebAppEjecucion.Models.relaObraPrototipo>

@{
    ViewBag.Title = "Index";
}

<h2>Prototipos de la Obra</h2>

<p>
   @Html.ActionLink("Agregar nuevo items", "Create", null, new { id = ViewBag.idobra }, new { @class = "btn btn-success" })
</p>
@if (Model.Count() != 0)
{
    <table class="table">
        <tr>
            <th>
                Obra
            </th>
            <th>
                Prototipo
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Cantidad Para Sorteo
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Obra.Obra1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prototipos.Prototipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantidadParaSorteo)
                </td>
                <td>
                    @Html.ActionLink("Ver Detalles", "Details", new { id = item.IdrelaObraPrototipo }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdrelaObraPrototipo }, new { @class = "btn btn-warning" }) |                   
                    @Html.ActionLink("Borrar", "Delete", new { id = item.IdrelaObraPrototipo }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
}
else
{
   <p>La Obra no tiene prototipos cargados</p>
}
<p>
    @Html.ActionLink("Atras", "Details", "Obras", new { id = ViewBag.idobra }, new { @class = "btn btn-danger" })
</p>
